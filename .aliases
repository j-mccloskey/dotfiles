# ls
alias ll='ls -ohGF'
alias l='ls -lGa'

# Other Commands
alias untar='tar -xvf'
alias mkdir='mkdir -p'
alias vi='vim'

# Directories
alias c='cd ..'

# Files
alias editbash='vim ~/.bashrc'
alias editalias='vim ~/.bash_aliases'
alias editprof='vim ~/.bash_profile'
alias hosts='sudo vim /etc/hosts'
alias vimrc='vim ~/.vimrc'

# Maven
alias mci='mvn clean install'
alias mct='mvn clean test'

# Processes
alias k9='kill -9'

alias kcConnectDev='kops export kubecfg dev-cluster.fantastec-swaps.io --state=s3://k8s-cluster-fantastec-swaps-state-store'
alias kcConnectDemo='kops export kubecfg cluster.fantastec-swaps.io --state=s3://k8s-cluster-fantastec-swaps-state-store'

# Kubernetes Colour
alias kubectl='/usr/local/bin/grc kubectl'

# thef
eval $(thefuck --alias f)
eval $(thefuck --alias)
